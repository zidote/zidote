root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.crlf.*]
end_of_line = crlf

[*.md]
indent_size = 4
trim_trailing_whitespace = false
eclint_indent_style = unset

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_size = 4
